{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver", "9000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/api/manage.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/.env"
            },
            "python": "${workspaceFolder}/api/venv/bin/python"
        }
    ]
}